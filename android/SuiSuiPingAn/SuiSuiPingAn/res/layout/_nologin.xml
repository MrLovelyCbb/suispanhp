<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fafafa"
    android:orientation="vertical"
    android:weightSum="10" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10" >
        
        <TextView
            android:id="@+id/notlogin"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="尚未登录!"
            android:textColor="@color/white"
            android:textSize="14sp" 
            android:background="@drawable/btn_show2"/>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.9"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/nologin_phonetext_1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/phone_imei_text"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nologin_phonetext_2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/nologin_phonetext_1"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/nologin_phonetext_2"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:id="@+id/nologin_imei"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/nologin_imei_read"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:layout_weight="2"
                android:src="@drawable/ic_welcome_about_normal"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.02"
        android:background="@color/grey" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nologin_phonetext2_1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2.8"
            android:gravity="center_vertical"
            android:text="@string/phone_spinner_fuwu_text"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nologin_phonetext2_2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/nologin_phonetext2_1"
            android:layout_weight="0.2"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.tc.myview.MySpinner
            android:id="@+id/nologin_spinner"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/nologin_phonetext2_2"
            android:layout_weight="7"
            android:background="@drawable/spinner"
            android:gravity="center"
            android:text="@string/phone_spinner_cheack_text" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.02"
        android:background="@color/grey" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/login_btn_fuwujieshao" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3.1"
        android:background="@drawable/bg_edittext" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/nologin_serdes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/nologin_canbaoflag"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.36"
        android:background="#cecece"
        android:gravity="center"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/nologin_xieyi"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="@string/login_text_xieyi"
        android:textColor="@drawable/text_select"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/nologin_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.6"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="9" >

        <com.tc.myview.MyButton
            android:id="@+id/nologin_loginBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4.5"
            android:background="@drawable/btn_show2" />

        <com.tc.myview.MyButton
            android:id="@+id/nologin_shopBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4.5"
            android:background="@drawable/btn_show2" />

        <com.tc.myview.MyButton
            android:id="@+id/nologin_canbaoBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="@drawable/btn_show2" 
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="9" >

        <com.tc.myview.MyButton
            android:id="@+id/login_fuwuBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4.5"
            android:background="@drawable/btn_show2" />

        <com.tc.myview.MyButton
            android:id="@+id/login_shopBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4.5"
            android:background="@drawable/btn_show2" />

        <com.tc.myview.MyButton
            android:id="@+id/login_canbaoBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="@drawable/btn_show2" 
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cblogin_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.6"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="9" >

        <com.tc.myview.MyButton
            android:id="@+id/cblogin_loginBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4.5"
            android:background="@drawable/btn_show2" />

        <com.tc.myview.MyButton
            android:id="@+id/cblogin_shopBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4.5"
            android:background="@drawable/btn_show2" />

        <com.tc.myview.MyButton
            android:id="@+id/cblogin_fuwuBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="@drawable/btn_show2"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>