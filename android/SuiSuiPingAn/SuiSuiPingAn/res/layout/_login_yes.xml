<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fafafa"
    android:orientation="vertical"
    android:weightSum="10" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10" >
        
        <TextView
            android:id="@+id/loginInfo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="您已登录!"
            android:textColor="@color/white"
            android:textSize="14sp" 
            android:background="@drawable/btn_show2"/>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.9"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/login_yes_phonetext_1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/phone_imei_text"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/login_yes_phonetext_2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/login_yes_phonetext_1"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/login_yes_phonetext_2"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:id="@+id/login_yes_imei"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/login_yes_phonetext_4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:layout_weight="2"
                android:src="@drawable/ic_welcome_about_normal"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.02"
        android:background="@color/grey" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_yes_phonetext2_1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/phone_spinner_canbao_text"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/login_yes_phonetext2_2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/login_yes_phonetext2_1"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.tc.myview.MyOrderSpinner
            android:id="@+id/login_yes_spinner"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/login_yes_phonetext2_2"
            android:layout_weight="7"
            android:background="@drawable/spinner"
            android:gravity="center"
            android:text="@string/phone_spinner_cheack_text" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.02"
        android:background="@color/grey" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/login_yes_xuanzefuwu_1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/phone_spinner_fuwu_text"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/login_yes_xuanzefuwu_2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/login_yes_xuanzefuwu_1"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.tc.myview.MySpinner2
            android:id="@+id/login_yes_xuanzefuwu"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/login_yes_xuanzefuwu_2"
            android:layout_weight="7"
            android:background="@drawable/spinner"
            android:gravity="center"
            android:text="@string/phone_spinner_cheack_text" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.02"
        android:background="@color/grey" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/login_yes_shengyurmb_1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/login_yes_otime"
            android:textColor="@color/grey"
            android:textSize="14sp" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/login_yes_shengyurmb_2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/login_yes_shengyurmb_1"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:textStyle="bold" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/login_yes_shengyurmb"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/login_yes_shengyurmb_2"
            android:layout_weight="7"
            android:background="@drawable/spinner"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black" 
            android:visibility="gone"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.02"
        android:background="@color/grey" />
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="2.3"
        android:background="@drawable/textview_border"
        android:orientation="vertical"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4.95"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2.8"
                android:gravity="center_vertical"
                android:text="@string/login_yes_starttime"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:text=":"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.tc.myview.MyTextView
                android:id="@+id/login_yes_starttime"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="7"
                android:gravity="center"
                android:text="" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.1"
            android:background="#f0f0f0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4.95"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2.8"
                android:gravity="center_vertical"
                android:text="@string/login_yes_outtime"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:text=":"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.tc.myview.MyTextView
                android:id="@+id/login_yes_outtime"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="7"
                android:gravity="center"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="10" >

        <Button
            android:id="@+id/login_yes_canbaobenjiBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="10"
            android:background="@drawable/btn_show2_2"
            android:text="@string/login_btn_canbaobenji"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/login_yes_xubaoBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="5"
            android:background="@drawable/btn_show2_2"
            android:text="@string/login_btn_xubao"
            android:textColor="@color/white"
            android:textSize="18sp" 
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.56"
        android:orientation="horizontal"
        android:weightSum="10" >

        <Button
            android:id="@+id/login_yes_claim"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4.95"
            android:background="@drawable/btn_show2"
            android:gravity="center"
            android:text="@string/login_btn_iwant_claim"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:background="@color/black" />

        <Button
            android:id="@+id/login_yes_shop"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4.95"
            android:background="@drawable/btn_show2"
            android:gravity="center"
            android:text="@string/login_btn_goto_shop"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>